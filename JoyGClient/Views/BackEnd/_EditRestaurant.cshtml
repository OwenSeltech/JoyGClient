@model JoyGClient.Models.RestaurantModel

<form asp-controller="BackEnd" asp-action="_EditRestaurant" data-ajax="true" data-ajax-method="POST">
    <div class="modal fade" id="modalAdd" tabindex="-1" role="dialog" aria-labelledby="myExtraLargeModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Edit Restaurant</h5>
                    <input type="hidden" id="myHiddenField" name="myHiddenField" value="" />
                </div>
                <div class="modal-body">
                    <div>
                        <div class="row">
                            <div id="dvMessage" style="display:none" class="alert alert-danger">
                                <span id="MsgOut">@ViewBag.Message</span>
                            </div>
                            <br />
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label class="floating-label" for="Name">Restaurant Name</label>
                                    @Html.TextBoxFor(m => m.RestaurantName, new { @class = "form-control" })
                                    <span class="field-validation-valid" data-valmsg-for="ClassificationName" data-valmsg-replace="true"></span>
                                    <label class="floating-label" for="Name">Classification</label>
                                    @Html.DropDownListFor(m => m.SelectedClassificationsId,Model.Classifications, "Please select", new { @class = "form-control" })
                                    <div>
                                        @Html.ValidationMessageFor(m => m.SelectedClassificationsId, "", new { @class = "error" })
                                    </div>
                                    @Html.HiddenFor(model => model.Id, new { @id = "myHiddenField" })
                                </div>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-sm-12">
                                <button class="btn btn-primary">Edit</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@if (@ViewBag.Message != null)
{
    <script type="text/javascript">
        $(function () {
            $("#dvMessage").show();
        });
    </script>
}

