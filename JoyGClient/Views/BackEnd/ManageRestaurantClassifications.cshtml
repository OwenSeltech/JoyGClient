@model IEnumerable<JoyGClient.Entities.RestaurantClassifications>
@{
    ViewData["Title"] = "ManageRestaurantClassifications";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ManageRestaurantClassifications</h1>

<div class="row">
    <table id="employeeDatatable" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClassificationName)
                    </td>
                    <td>
                        <a href="#!" class="pc-link "><span class="pc-micon"><i data-feather="edit"></i></span><span class="pc-mtext">Text Editors</span><span class="pc-arrow"><i data-feather="chevron-right"></i></span></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="row">
    <div class="col-md-3">
        <button class="btn btn-success btn-sm mb-3 btn-round" id="showAddModal"><i class="feather icon-plus"></i>Add </button>
    </div>
</div>
<div id="modalContainer"></div>
<div id="myDataContainer"></div>

<div>
    <a class="nav-link text-dark" asp-area="" asp-controller="Dashboard" asp-action="Index">Back To Home</a>

</div>
<script src="https://code.jquery.com/jquery-1.10.2.js"></script>
<script>
    $(document).ready(function() {
        $('#showAddModal').click(function () {
        $.ajax({
                url: '/BackEnd/AddClassification',
            type: 'GET',
            success: function(result) {
                $('#modalContainer').html(result);
                $('#modalAdd').modal('show');
                $("#MsgOut").text("");
                $("#dvMessage").hide();
            }
        });
    });
});
</script>
<script>
    $(function () {
        var strValue = "@((string)ViewBag.mssg)";
        if (strValue !== null && strValue !== "")
        {
            $.ajax({
                url: '/BackEnd/AddClassification',
                type: 'GET',
                success: function (result) {
                    $('#modalContainer').html(result);
                    $('#modalAdd').modal('show');
                    $("#MsgOut").text(strValue);
                    $("#dvMessage").show();
                }
            });
        }
      
    });
</script>
