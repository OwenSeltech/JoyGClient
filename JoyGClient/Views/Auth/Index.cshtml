@model JoyGClient.Models.LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
    <script type="text/javascript" src='https://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.8.3.min.js'></script>
    <link rel="stylesheet" href='https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.0.1/css/bootstrap.min.css'
          media="screen" />

    
    @using (Html.BeginForm("Index", "Auth", FormMethod.Post))
    {
        <div class="h-100 d-flex align-items-center justify-content-center">
            <div>
                <h2 class="form-signin-heading">
                    Login
                </h2>
                @Html.LabelFor(m => m.Username)
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                <div>
                    @Html.ValidationMessageFor(m => m.Username, "", new { @class = "error" })
                </div>
                <br />
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                <div>
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "error" })
                </div>
                <br />
                <input type="submit" value="Submit" class="btn btn-primary" />
                <br />
                <a class="nav-link text-dark" asp-area="" asp-controller="Auth" asp-action="Register">Register</a>
                <br />
                <div id="dvMessage" style="display:none" class="alert alert-danger">
                    <strong>Error!</strong>
                    <span>@ViewBag.Message</span>
                </div>
            </div>
        </div>
    }
    @if (@ViewBag.Message != null)
    {
        <script type="text/javascript">
            $(function () {
                $("#dvMessage").show();
            });
        </script>
    }
</body>
</html>
